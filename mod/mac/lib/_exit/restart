# shellcheck shell=dash

___x_cmd_mac_restart(){
    [ $# -gt 0 ]    ||  set -- --confirm
    case "$1" in
        -y|--yes)   ___x_cmd_mac_restart___cmd ;;
        --confirm)  ___x_cmd_mac_restart___cmd_confirm ;;
        *)          N=mac M="Unknow argument -> $1" log:ret:64 ;;
    esac
}

___x_cmd_mac_restart___cmd_confirm(){
    osascript -e 'tell app "System Events" to restart'
}

___x_cmd_mac_restart___cmd(){
    osascript -e 'tell app "loginwindow" to «event aevtrrst»'
}
